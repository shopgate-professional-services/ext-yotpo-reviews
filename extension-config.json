{
  "version": "1.1.3",
  "id": "@shopgate-project/yotpo-reviews",
  "components": [
    {
      "id": "ProductReviewsPortal",
      "path": "frontend/portals/ProductReviews",
      "target": "product.reviews",
      "type": "portals"
    },
    {
      "id": "ProductInfoAfterPortal",
      "path": "frontend/portals/ProductInfoAfter",
      "target": "product.info.after",
      "type": "portals"
    },
    {
      "type": "portals",
      "target": "app.globals",
      "path": "frontend/portals/GlobalCssRules",
      "id": "GlobalCssRules"
    }
  ],
  "configuration": {
    "yotpoAppKey": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "required": true,
        "type": "string",
        "label": "Yotpo App Key"
      }
    }
  }
}
